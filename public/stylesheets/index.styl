body
  margin: 0
  padding: 0
  overflow: hidden
  font-family: sans-serif

.led-container
  height: 200px
  width: 100%
  background: #333
  h1
    margin: 0
    padding: 36px
    color: white
  .led-strip
    height: 100%
    display: flex
    justify-content: center
    align-items: center
  .led-strip__pixel
    flex-shrink: 0
    height: 15px
    width: 15px
    border-radius: 100%
    margin: 2px
    background: #000
    label
      position: absolute
      margin-top: 20px
      color: #ccc
      font-size: 13px
      font-weight: bold

.monaco-container
  height: calc(100vh - 200px)
  width: 100%
  background: #333

.button-container
  position: absolute
  bottom: 0
  right: 0
  display: flex
  justify-content: flex-end
  pointer-events: none
  button
    pointer-events: auto
    margin: 16px
    padding: 32px
    background: #333
    border: 4px solid white
    border-radius: 8px
    color: white
    font-family: inherit
    font-size: 24px
    cursor: pointer
    &#reset
      background: #333
      &:hover
        background: lighten(#333, 25%)
    &#run
      background: #0ac229
      &:hover
        background: lighten(#0ac229, 25%)
    &#send
      background: #fdb417
      &:hover
        background: lighten(#fdb417, 25%)
  button[disabled="disabled"]
    cursor: not-allowed
    background: #ddd !important
    color: white !important